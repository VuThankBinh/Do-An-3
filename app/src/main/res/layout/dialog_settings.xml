<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:background="#00FFFFFF"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="235dp"
        android:id="@+id/shopp"
        android:background="@drawable/back_setting">

    </RelativeLayout>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/titlie_set"
        android:id="@+id/title"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/nhacback1"
       android:layout_below="@+id/title"
       android:layout_centerHorizontal="true">
       <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:id="@+id/nhacback"
           android:src="@drawable/notnhac"
           >
       </ImageView>
       <SeekBar
           android:layout_toRightOf="@+id/nhacback"
           android:layout_width="185dp"
           android:id="@+id/seek1"
           android:layout_centerVertical="true"
           android:layout_height="wrap_content"
           >
       </SeekBar>
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nhacxb1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/nhacback1"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/nhacxb"
            android:src="@drawable/voicexb"
            >
        </ImageView>
        <SeekBar
            android:id="@+id/seek2"
            android:layout_toRightOf="@+id/nhacxb"
            android:layout_width="185dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            >
        </SeekBar>
    </RelativeLayout>

    <TextView
        android:id="@+id/cham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Chạm để thoát"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic">
    </TextView>
</RelativeLayout>