<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".batcap"
    android:padding="20dp"
    android:background="@drawable/background_duo">
    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/back"
        android:layout_below="@+id/start_sansang"
        android:text="Thoát"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/idroom"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@drawable/idroom"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sedgwickave_regular"
        android:gravity="center"
        android:text="ID: 240703"
        android:textColor="#352103"
        android:layout_marginTop="77dp"
        android:textSize="22dp"
        android:textStyle="bold">
    </TextView>

    <RelativeLayout
        android:id="@+id/relayngchoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idroom"
        android:layout_centerVertical="true"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:id="@+id/player1"
            android:layout_width="160dp"
            android:layout_height="210dp"
            >
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:id="@+id/iddd"
                android:background="@drawable/khungvs">
                <ImageView
                    android:id="@+id/avt1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/khung2"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/avt3"/>

                <TextView
                    android:id="@+id/nameplayer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avt1"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/sedgwickave_regular"
                    android:text="Thanh thảo"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/iddd"
                android:layout_centerHorizontal="true"
                android:text="Sẵn sàng"
                android:id="@+id/ss1"
                android:textSize="18dp"
                android:visibility="gone"
                android:fontFamily="@font/sedgwickave_regular"
                android:textColor="@color/black">
            </TextView>


        </RelativeLayout>

        <ImageView
            android:id="@+id/vs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/player1"
            android:background="@drawable/vs"/>

        <RelativeLayout
            android:id="@+id/player2"
            android:layout_width="160dp"
            android:layout_height="270dp"
            android:layout_toRightOf="@+id/vs"
            >
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:id="@+id/iddd2"
                android:background="@drawable/khungvs">
                <ImageView
                    android:id="@+id/avt2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/khung2"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone"
                    android:src="@drawable/avt3"/>

                <TextView
                    android:id="@+id/nameplayer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avt2"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/sedgwickave_regular"
                    android:text="Thanh thảo"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/iddd2"
                android:layout_centerHorizontal="true"
                android:text="Sẵn sàng"
                android:id="@+id/ss2"
                android:textSize="18dp"
                android:fontFamily="@font/sedgwickave_regular"
                android:textColor="@color/black">
            </TextView>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/ss2"
                android:id="@+id/kick"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btnback">
            </Button>
        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/start_sansang"
        android:layout_below="@+id/relayngchoi"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btnss"
        android:layout_marginTop="40dp"/>

</RelativeLayout>